{
  "ReverseProxy": {
    "Routes": {
      "catalog": {
        "ClusterId": "catalog-cluster",
        "Match": { "Path": "/catalog/{**catch-all}" }
      },
      "basket": {
        "ClusterId": "basket-cluster",
        "Match": { "Path": "/basket/{**catch-all}" }
      },
      "ordering": {
        "ClusterId": "ordering-cluster",
        "Match": { "Path": "/ordering/{**catch-all}" }
      }
    },

    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "catalog-api": {
            "Address": "http://localhost:6000/"
          }
        }
      },
      "basket-cluster": {
        "Destinations": {
          "basket-api": {
            "Address": "http://localhost:7000/"
          }
        }
      },
      "ordering-cluster": {
        "Destinations": {
          "ordering-api": {
            "Address": "http://localhost:5000/"
          }
        }
      }
    }
  },

  "SwaggerServices": [
    {
      "Name": "Catalog API",
      "SwaggerEndpoint": "http://localhost:6000/swagger/v1/swagger.json"
    },
    {
      "Name": "Basket API",
      "SwaggerEndpoint": "http://localhost:7000/swagger/v1/swagger.json"
    },
    {
      "Name": "Ordering API",
      "SwaggerEndpoint": "http://localhost:5000/swagger/v1/swagger.json"
    }
  ]
}
